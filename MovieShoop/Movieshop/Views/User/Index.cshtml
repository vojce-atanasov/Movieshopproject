@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<div class="container">
    <div class="row">
        <div class="row mt-4">
            <div class="col-12 font-italic font-weight-bold">
                <h2>Users</h2>
            </div>
        </div>
        <table class="col-12 table table-bordered">
            <thead class="table-dark ">
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        User Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th colspan="2">
                        <a asp-action="Create" class="btn btn-success btn-block">
                            <i class="fas fa-user mr-2"></i>CREATE USER
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Microsoft.AspNetCore.Identity.IdentityUser user in Model)
                 {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => user.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.Email)
                        </td>
                        <td>
                            <div class="row mt-2">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-block btn-primary">
                                    <i class="fas fa-edit"></i>&nbsp; Edit
                                </a>
                            </div>
                            <div class="row mt-2">
                                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-block btn-info">
                                    <i class="fas fa-info"></i>&nbsp;Details
                                </a>
                            </div>
                            <div class="row mt-2">
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-block btn-danger">
                                    <i class="fas fa-trash-alt"></i>&nbsp;Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                 }
            </tbody>
        </table>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
